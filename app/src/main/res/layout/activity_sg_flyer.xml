<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/filterTextView"
    android:scrollbars="horizontal|vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sg_flyer_caption"
        android:textStyle="bold"
        android:textSize="33sp"
        android:id="@+id/captionSgFlyer"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:id="@+id/merlionImage"
        android:background="@drawable/sg_flyer"
        android:onClick="onPictureClick"
        android:layout_below="@+id/captionSgFlyer"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Click the Image to visit the website"
        android:id="@+id/textView4"
        android:textColor="@android:color/white"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/merlionImage"
        android:layout_centerHorizontal="true" />
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/merlionImage" />

</RelativeLayout>