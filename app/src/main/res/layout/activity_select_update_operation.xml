<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/activity_search_activity_main">


    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="49dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">
        <ImageButton
            android:id="@+id/listAttractionBut"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="@drawable/delete_activity"
            android:onClick="onDeleteActivityClick"
            />

        <ImageButton
            android:id="@+id/natureActivityBut"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="@drawable/edit_activity"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/select_one_text_view"
        android:textSize="20sp"
        android:layout_above="@+id/buttonLayout"
        android:layout_alignStart="@+id/buttonLayout"
        android:id="@+id/textView"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Activity"
        android:id="@+id/captionSearchActivities"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="33sp"
        android:textStyle="bold"
        />




</RelativeLayout>